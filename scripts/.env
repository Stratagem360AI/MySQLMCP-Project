# ==================================================
# .env.example - Environment Variables Template
# ==================================================

# .env.example - Copy to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=bigdata
DB_USER=root
DB_PASSWORD=

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, ollama
LLM_API_KEY=   #"API_KEY"  # Required for OpenAI
LLM_MODEL=gpt-3.5-turbo  # or gpt-4, llama2, etc.
LLM_BASE_URL=http://localhost:11434  # For Ollama
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.1

# Logging
LOG_LEVEL=INFO
